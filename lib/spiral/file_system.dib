## normalize_path

#!spiral

inl normalize_path (path : string) : string =
    if runtime.is_windows () |> not
    then path
    else
        inl path = path |> sm'.replace_regex @"^\\\\\?\\" ""
        $'$"{!path.[0] |> string |> _.ToLower()}{!path.[1..]}"' |> sm'.replace "\\" "/"


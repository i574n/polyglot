## forall'

#!spiral

inl forall' fn (head :: tail) =
    (true, tail)
    ||> listm.fold fun acc x =>
        acc && x = head

#!spiral

// // test

[ 1i32; 1; 1; 1; 1 ]
|> forall' ((=) 1i32)
|> _equal true


## indexed

#!spiral

inl indexed list =
    (([], 0), list)
    ||> listm.fold fun (acc, i) x =>
        (i, x) :: acc, i + 1
    |> fst
    |> listm.rev

#!spiral

// // test

listm.init 5i32 ((*) 2)
|> indexed
|> _equal [ 0i32, 0; 1, 2; 2, 4; 3, 6; 4, 8 ]


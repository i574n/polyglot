## iter

#!spiral

inl iter fn = function
    | Some x => fn x
    | None => ()

#!spiral

// // test

inl n = mut 1i32
inl fn =
    fun n' =>
        n <- *n + n'
Some 1i32 |> iter fn
None |> iter fn
*n
|> _assert_eq 2i32

#!markdown

## option'

#!spiral

nominal option' t = $"`t option"

#!markdown

## none'

#!spiral

inl none' forall t. () : option' t =
    $'None'

#!spiral

inl some' forall t. (x : t) : option' t =
    $'Some !x '

#!markdown

## map

#!spiral

inl map forall t u. (fn : t -> u) (x : option' t) : option' u =
    $'!x |> Option.map !fn '

#!markdown

## default_value'

#!spiral

inl default_value' forall t. (value : t) (x : option' t) : t =
    $'!x |> Option.defaultValue !value '

#!markdown

## unbox

#!spiral

inl unbox forall t. (x : option' t) : option t =
    // x
    // |> map Some
    // |> default_value' None
    inl some x : option t = Some x
    inl some = join some
    inl none : option t = None
    $'!x |> Option.map !some |> Option.defaultValue !none '

#!markdown

## box

#!spiral

inl box forall t. (x : option t) : option' t =
    // x
    // |> optionm.map some'
    // |> default_with none'
    match x with
    | Some x => some' x
    | None => none' ()

#!spiral

// // test

inl x = Some 3i32
inl y : option i32 = None
inl x' = x |> box |> unbox
inl y' = y |> box |> unbox
(x', y') |> _assert_eq (x, y)

#!markdown

## try'

#!spiral

inl try' forall t. (x : option' t) : t =
    !\\(x, $'"$0?"')

#!markdown

## flatten

#!spiral

inl flatten x =
    match x with
    | Some (Some x) => Some x
    | _ => None

#!markdown

## unwrap

#!spiral

inl unwrap forall t. (x : option' t) : t =
    !\($'"!x.unwrap()"')

#!markdown

## unwrap_or

#!spiral

inl unwrap_or forall t. (def : t) (x : option' t) : t =
    !\($'"!x.unwrap_or(!def)"')

#!markdown

## rc_upgrade

#!spiral

inl rc_upgrade forall t. (x : rust.weak_rc t) : option (rust.rc t) =
    inl x = join x
    !\($'"std::rc::Weak::upgrade(&!x)"')
    |> unbox

let run () =
    let inline rollMax fn max n =
        [ 1 .. n ]
        |> List.map (fun _ -> fn max)
        |> List.groupBy id
        |> List.map (fun (_, v) -> v.Length)

    let max = 10
    let n = 30
    let even = (n / max) |> int

    let rec rollN current =
        let roll = rollMax (rollProgressively None rollDice true) max n
        if roll |> List.forall ((=) even)
        then current
        else rollN (current + 1)

    rollN 0


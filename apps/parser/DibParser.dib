let inline escapeCell input =
    input
    |> String.split [| '\n' |]
    |> Array.map (function
        | line when line |> String.startsWith "\\#!" || line |> String.startsWith "\\#r" ->
            System.Text.RegularExpressions.Regex.Replace (line, "^\\\\#", "#")
        | line -> line
    )
    |> String.concat "\n"


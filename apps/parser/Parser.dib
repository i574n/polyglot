#!fsharp

let inline sepBy1 p sep =
    let sepThenP = sep >>. p
    p .>>. many sepThenP
    |>> fun (p, pList) -> p :: pList

#!fsharp

let inline sepBy p sep =
    sepBy1 p sep <|> returnP []


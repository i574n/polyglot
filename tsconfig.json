{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "types": ["node"]
  },
  "include": ["**/*"],
  "exclude": ["dist", "pkg", "node_modules"]
}

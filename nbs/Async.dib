## map

#!fsharp

let inline map fn a = async {
    let! x = a
    return fn x
}

#!fsharp

let inline catch a =
    a
    |> Async.Catch
    |> map (function
        | Choice1Of2 result -> Ok result
        | Choice2Of2 ex -> Error ex
    )

